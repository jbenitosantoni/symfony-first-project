{% extends'adminPanel/base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="../../../css/dashboard.css">
{% endblock %}
{% block h2Title %}
    Generar Pedido
{% endblock %}
{% block activeInicio %}active{% endblock %}
{% block single %}
    <form method="post" action="{{ path('generarPedido') }}">
        <label for="articulos"><b>Articulos:</b></label>
        <div class="col-sm-5">
            <textarea class="form-control" rows="4" cols="50" id="articulos" name="articulos" required></textarea>
        </div>
        <label for="precio"><b>Precio Final (ARG):</b></label>
        <div class="col-sm-2">
            <input class="form-control" type="number" step="0.01" value="0.00" placeholder="0.00" name="precio" id="precio" pattern="^\d{0,8}(\.\d{1,4})?$" required>
        </div>
        <input type="hidden" name="idCliente" value="{{ idCliente }}">
        <br>
        <button type="submit" class="btn btn-primary mb-2">Crear</button>
    </form>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="../../../js/dashboard.js"></script>
{% endblock %}