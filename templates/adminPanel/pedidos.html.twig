{% extends'adminPanel/base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="../../css/dashboard.css">
{% endblock %}
{% block h2Title %}
    Todos los Pedidos - Dispenseeds
{% endblock %}
{% block activePedidos %}
    active
{% endblock %}
{% block headTable %}
    <tr>
        <th>#</th>
        <th>Nombre y Apellidos</th>
        <th>Instagram</th>
        <th>Email</th>
        <th>Pagado</th>
        <th>Enviado</th>
        <th>Devuelto</th>
        <th>Precio Final</th>
        <th>Ver / Editar</th>
    </tr>
{% endblock %}
{% block bodyTable %}
    {% for pedido in pedidos %}
        <tr>
            <td>{{ pedido.id }}</td>
            <td>{{ pedido.Nombre }} {{ pedido.Apellidos }}</td>
            <td>{{ pedido.Instagram }}</td>
            <td>{{ pedido.Email }}</td>
            <td>{% if pedido.Pagado == 1 %}Si{% else %} No {% endif %}</td>
            <td>{% if pedido.Enviado == 1 %}Si{% else %} No {% endif %}</td>
            <td>{% if pedido.Devuelto == 1 %}Si{% else %} No {% endif %}</td>
            <td>{{ pedido.PrecioFinal }} ARS</td>
            <td><a href="{{ path('verPedido', {'id': pedido.id})}}"><button type="button" class="btn btn-outline-primary">Ver / Editar</button></a></td>
        </tr>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="../../js/dashboard.js"></script>
{% endblock %}